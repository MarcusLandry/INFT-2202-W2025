<div class="row">
    <div class="col-md-8 offset-md-2">
        {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}}
        
        <div class="card">
            <div class="card-body">
                <form action="/animals/edit/{{animal._id}}" method="POST" id="editForm">
                    <div class="mb-3">
                        <label for="zoo" class="form-label">Zoo Name</label>
                        <input type="text" class="form-control" id="zoo" name="zoo" value="{{animal.zoo}}" required>
                    </div>

                    <div class="mb-3">
                        <label for="scientificName" class="form-label">Scientific Name</label>
                        <input type="text" class="form-control" id="scientificName" name="scientificName" value="{{animal.scientificName}}" required>
                    </div>

                    <div class="mb-3">
                        <label for="commonName" class="form-label">Common Name</label>
                        <input type="text" class="form-control" id="commonName" name="commonName" value="{{animal.commonName}}" required>
                    </div>

                    <div class="mb-3">
                        <label for="givenName" class="form-label">Given Name</label>
                        <input type="text" class="form-control" id="givenName" name="givenName" value="{{animal.givenName}}" required>
                    </div>

                    <div class="mb-3">
                        <label for="gender" class="form-label">Gender</label>
                        <select class="form-select" id="gender" name="gender" required>
                            <option value="Male" {{#if (eq animal.gender "Male")}}selected{{/if}}>Male</option>
                            <option value="Female" {{#if (eq animal.gender "Female")}}selected{{/if}}>Female</option>
                            <option value="Unknown" {{#if (eq animal.gender "Unknown")}}selected{{/if}}>Unknown</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="dateOfBirth" class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" value="{{formatDate animal.dateOfBirth "YYYY-MM-DD"}}" required>
                    </div>

                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="number" class="form-control" id="age" name="age" value="{{animal.age}}" min="0" required>
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="isTransportable" name="isTransportable" {{#if animal.isTransportable}}checked{{/if}}>
                        <label class="form-check-label" for="isTransportable">Is Transportable</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Update Animal Record</button>
                        <button type="button" class="btn btn-danger" onclick="deleteAnimal()">Delete Animal</button>
                    </div>
                </form>

                <form id="deleteForm" action="/animals/delete/{{animal._id}}" method="POST" style="display: none;"></form>
            </div>
        </div>
    </div>
</div>

<script>
function deleteAnimal() {
    if (confirm('Are you sure you want to delete this animal?')) {
        document.getElementById('deleteForm').submit();
    }
}
</script>
